.container {
    padding-bottom: 100rpx;
}

.order-item-container {
    box-sizing: border-box;
    padding: 30rpx 30rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 750rpx;
    background-color: #ffffff;
}

.order-item {
    margin-bottom: 20rpx !important;
}

